  %body
    .container
      .jumbotron
        .container
          %h1 Hiroto-K.github.io
          %p
            This is a web pages of
            = succeed "." do
              %a{:href => "https://github.com/Hiroto-K"} Hiroto-K
          %h2 Links
          .list-group
            %a.list-group-item{:href => "https://hiroto-k.net/"} Home Page
            %a.list-group-item{:href => "https://hiroto-k.net/profile"} Profile
            %a.list-group-item{:href => "https://hiroto-k.net/project"} Project
            %a.list-group-item{:href => "https://hiroto-k.net/work"} Work
            %a.list-group-item{:href => "http://hiroto-k.hatenablog.com/"} Blog (Programming)
            %a.list-group-item{href: "https://hiroto-k.github.io/blog/"} Blog (Train)
            %a.list-group-item{:href => "https://hiroto-k.net/contact"} Contact
          .github-main
            %h2
              Public Repositories
              %span.label.label-primary.repo-count
            .list-group.repo-list
            %h2 GitHub Pages
            .list-group.pages-list
          .github-error
            %h2 Public Repositories
            %h3 Error
            %p.text-warning Sorry, An error has occurred.
      .to-top
        %p.to-top-button.fa.fa-angle-up.fa-lg
